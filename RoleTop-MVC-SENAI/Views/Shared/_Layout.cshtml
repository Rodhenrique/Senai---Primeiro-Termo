@model RoletopMvc.ViewModels.BaseViewModel

<!DOCTYPE html>
<html>
    <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>topezeira</title>
    <script src="https://kit.fontawesome.com/349a64cb04.js"></script>
            

        <link href="~/css/style.css" rel="stylesheet" type="text/css">


</head>
<div>

<body>
    <div id="background-img">
        <img src="~/img/icons8-coroa-52.png" alt="">

        <img src="~/img/logo.png" title="logo do role" alt="uma coroa">
        <img src="~/img/icons8-coroa-52.png" alt="">

    </div>
    <header>
        <nav>
            <div class="section-container">

                <ul>

                    <li id="bt-mobile-menu">
                        <!-- HTML para colocar os ícones do FA -->
                        <a href="javascript:void(0);" class="icon" onclick="toggleMobileMenu()">
                                <i class="fas fa-crown"></i>

                        </a>
                    </li>

                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Home" asp-action="Index" class="active">Inicio</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Home" asp-action="Agenda">Agenda</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()"  href='@Url.Action("Galeria","Galerias")'>Galeria</a></li>
                    <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Home" asp-action="QuemSomos">Quem Somos</a></li>
                    @if(string.IsNullOrEmpty(@Model.UsuarioEmail))
                    {
                        <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Cliente" asp-action="Login">Login</a></li>
                        <li class="bt-common-menu"><a onclick="toggleMobileMenu()" href='@Url.Action("Index","Cadastro")'>Cadastro</a></li>
                    }else
                    {
                        <li class="bt-common-menu"><a onclick="toggleMobileMenu()"  asp-controller="DashCliente" asp-action="Dados">Dados</a></li>
                        if (!@Model.UsuarioEmail.Equals("admin@admin.com"))
                        {
                            <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="DashCliente" asp-action="Dashboard">Perfil</a></li>                
                        }else
                        {
                            <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Administrador" asp-action="ADM">Dashboard</a></li>                
                        }
                        <li class="bt-common-menu"><a onclick="toggleMobileMenu()" asp-controller="Cliente" asp-action="Logoff">Logoff</a></li>
                    }
                    
                </ul>
            </div>
        </nav>
        
    </header>
</div>

            @RenderBody()

            <footer>
    <img src="~/img/icons8-festa-dançante-100.png" title="cara dançando" alt="cara dançando">
    <address>

    Telefone:11-4002-8922 WhatsApp:11-91234-5678 <br>
    Av.Barão de Limeira,132 Cep:01202-000 <br>
    email:roletop132@gmail.com <br>
    </address>

    <div class="icones">
        <img src="~/img/icons8-facebook-48.png" title="facebook" alt="icone do facebook">
        <img src="~/img/icons8-gmail-48.png" title="gmail" alt="icone do gmail">
        <img src="~/img/icons8-google-plus-48.png" title="google plus" alt="icone do google plus">
        <img src="~/img/icons8-twitter-48.png" title="twitter" alt="icone do twitter">
        <img src="~/img/icons8-instagram-48.png" title="instragram" alt="icone do instragram">
    </div>
</footer>

<script>

    function toggleMobileMenu() {
    var ul = document.querySelector("nav ul");
    var commonButtons = document.querySelectorAll("nav .bt-common-menu");
    var icon = document.querySelector(".icon > i");

    ul.classList.toggle("mobile-mode");

    if (icon.classList.contains("fa-bars")) {
    icon.classList.remove("fa-bars");
    icon.classList.remove("fa");

    icon.classList.add("fas");
    icon.classList.add("fa-crown");
    } else {
    icon.classList.remove("fas");
    icon.classList.remove("fa-crown");

    icon.classList.add("fa");
    icon.classList.add("fa-bars");
    }

    for (var button of commonButtons) {
    button.classList.toggle("active");
    }

}

</script>
<script src="~/js/Script.js"></script>
<script src="~/js/SlideShow.js"></script>
</body>
    
</html>
